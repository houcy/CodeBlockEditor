<!DOCTYPE html>
<html style="font-size:20px;">
<head>
  <meta charset="utf-8">
  <title>Code Block</title>
  <?npl
	PAGE_NO_SIDE_BAR = true;

	wp_enqueue_script("blockly_compressed_vertical",		"/wp-includes/js/scratch-blocks/blockly_compressed_vertical.js");
	wp_enqueue_script("lua_compressed",			"/wp-includes/js/scratch-blocks/lua_compressed.js");
	wp_enqueue_script("messages",			"/wp-includes/js/scratch-blocks/msg/messages.js");
	wp_enqueue_script("scratch_msgs",			"/wp-includes/js/scratch-blocks/msg/scratch_msgs.js");
	wp_enqueue_script("blocks_common_colour",			"/wp-includes/js/scratch-blocks/blocks_common/colour.js");
	wp_enqueue_script("blocks_common_math",			"/wp-includes/js/scratch-blocks/blocks_common/math.js");
	wp_enqueue_script("blocks_common_matrix",			"/wp-includes/js/scratch-blocks/blocks_common/matrix.js");
	wp_enqueue_script("blocks_common_text",			"/wp-includes/js/scratch-blocks/blocks_common/text.js");


	local state = request:get("state");
	local code = request:get("code");
	local blockpos = request:get("blockpos");
	if(is_ajax()) then
		add_action('wp_ajax_runblockly', function()

			NPL.load("(gl)script/apps/Aries/Creator/Game/Code/CodeBlockWindow.lua");
			local CodeBlockWindow = commonlib.gettable("MyCompany.Aries.Game.Code.CodeBlockWindow");
			CodeBlockWindow.Show(true);
			local bx, by, bz;
			if(blockpos) then
				local pos = {};
				for v in blockpos:gmatch("%d+") do
					pos[#pos+1] = tonumber(v);
				end
				bx, by, bz = pos[1], pos[2], pos[3]
			end
			local result;
			if(state == "insert")then
				result = CodeBlockWindow.InsertCodeAtCurrentLine(code, true, bx, by, bz);
			else
				result = CodeBlockWindow.ReplaceCode(code, bx, by, bz);
			end
			wp_send_json({succeed = result~=false, code=code},true);
		end)
		add_action('wp_ajax_makeblocklyeditor', function()
            NPL.load("(gl)script/apps/Aries/Creator/Game/Common/Translation.lua");
			NPL.load("(gl)script/apps/Aries/Creator/Game/Code/CodeBlocklySerializer.lua");
            local Translation = commonlib.gettable("MyCompany.Aries.Game.Common.Translation")

            local lang = Translation.GetCurrentLanguage();

			local CodeBlocklySerializer = commonlib.gettable("MyCompany.Aries.Game.Code.CodeBlocklySerializer");
			local menu_xml = CodeBlocklySerializer.GetBlocklyMenuXml();
			local config_json = CodeBlocklySerializer.GetBlocklyConfig();
			local execution_str = CodeBlocklySerializer.GetBlocklyCode();
			local keywords_json = CodeBlocklySerializer.GetKeywords();
			wp_send_json({
                lang = lang,
				menu_xml = menu_xml,
				config_json = config_json,
				execution_str = execution_str,
				keywords_json = keywords_json,
			},true);
		end)

		return;
	end
  ?>
  <script type="text/javascript"  data-main="wp-includes/js/Mod/CodeBlockEditor/main.js" src="wp-includes/js/requirejs/require.js"></script>  
</head>

<body >
	<div ng-controller="CodeBlockEditorController" >
		<div class="row">
            <div ng-if="locale == 'en'">
                <button ng-click="onRun('insert')" style="margin-left:15px;">Insert</button>
			    <button ng-click="onRun('replace')" style="margin-left:5px;">Replace</button>
            </div>
            <div ng-if="locale != 'en'">
			    <button ng-click="onRun('insert')" style="margin-left:15px;">插入</button>
			    <button ng-click="onRun('replace')" style="margin-left:5px;">替换</button>
			    <!--<button ng-click="onRun('showcode')" style="margin-left:5px;">编译</button>-->
			    <!--<button ng-click="onParse()" style="margin-left:5px;">生成Block</button>-->
			    <!--<button ng-click="onExportXml()" style="margin-left:5px;">生成xml</button>-->
			</div>
			<div ng-repeat="notification in notifications" style="position:fixed;z-index:9999;width:90%;top:10px">
                <div class="alert alert-{{notification.type}} fade in" style="margin-bottom:0px;">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{notification.text}}
                </div>
            </div>  
		</div>  
		<div id="blocklyDiv" style="margin-top:5px;height: 600px; width: 1024px;"></div>
		<div id="editor" style="height:200px; width:1024px;"></div>
	</div>
</body>
</html>